<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/account"
    app:startDestination="@+id/fragment_splash">

    <fragment
        android:id="@+id/fragment_splash"
        android:name="com.fhypayaso.tittytainment.account.ui.fragment.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_go_login"
            app:destination="@id/fragment_login" />
    </fragment>


    <fragment
        android:id="@+id/fragment_login"
        android:name="com.fhypayaso.tittytainment.account.ui.fragment.LoginFragment"
        tools:layout="@layout/fragment_account">
        <action
            android:id="@+id/action_go_register"
            app:destination="@id/fragment_register"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/fragment_register"
        android:name="com.fhypayaso.tittytainment.account.ui.fragment.RegisterFragment"
        tools:layout="@layout/fragment_account" />


</navigation>